<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:padding="15sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/bottom_filter_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>


        <GridLayout
            android:id="@+id/filter_grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:useDefaultMargins="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/cateory_modal_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:src="@drawable/category_icon" />


                <!-- text view to display selected items-->
                <TextView
                    android:textAlignment="textStart"
                    android:textSize="28sp"
                    android:id="@+id/filter_by_category_view"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16dp"
                    android:text="Filter By Category"
                    app:drawableRightCompat="@android:drawable/arrow_down_float" />




            <ImageView
                android:id="@+id/location_bottom_modal_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:src="@drawable/my_location_icon" />

            <TextView
                android:id="@+id/location_bottom_modal_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:text="@string/distance"
                android:textSize="32sp" />
        </GridLayout>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/slider_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stepSize="5"
            android:value="10"
            android:valueFrom="0"
            android:valueTo="50"
            app:layout_anchor="@id/filter_grid_view"
            app:layout_anchorGravity="bottom|clip_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_grid_view" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_filter_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="@color/purple_500"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slider_filter" />

        <Space
            android:layout_width="20sp"
            android:layout_height="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_event_save_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>