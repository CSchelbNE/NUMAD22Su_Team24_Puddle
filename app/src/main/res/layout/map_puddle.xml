<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_card"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:backgroundTint="#FFFFFF"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/map_puddle_bg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/purple_200"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/map_open_puddle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/open_puddle" />

        <ImageView
            android:id="@+id/map_member_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/map_puddle_bg"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/member_icon"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/map_member_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/map_member_icon"
            android:layout_alignBottom="@+id/map_puddle_bg"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="12dp"
            android:text="36 Members"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_mid"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/map_puddle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/map_puddle_bg"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="36dp"
            android:text="Friday Pub Night"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
