<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_mid">

    <ImageView
        android:id="@+id/puddle_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textSize="@dimen/font_size_mid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/puddle_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src ="@drawable/puddle"/>

    <TextView
        android:id="@+id/puddle_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_mid"
        app:layout_constraintTop_toBottomOf="@id/puddle_item_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_mid"
        android:text="Hello"/>

</androidx.constraintlayout.widget.ConstraintLayout>