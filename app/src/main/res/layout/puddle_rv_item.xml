<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_mid">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/puddle_item_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/puddle"
        android:scaleType="fitXY"
        android:textSize="@dimen/font_size_mid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/puddle_name_tv"
        android:layout_width="@dimen/fit_constraint"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:text="Hello"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/font_size_mid"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/puddle_item_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>